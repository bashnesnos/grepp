project.ext {
	targetDir = new File(rootDir.getAbsolutePath() + '/release')
	embedded = true //flag to embedd groovy-all into wgrep.jar
	doZip = true //flag to zip the build
	params = ['#WIN_DIR#' : targetDir.getAbsolutePath(),	//specify Windows home
				'#NIX_DIR#' : '', //specify Nix home
				'#USER#' : '', //specify user
				'#BOXES#' : '', //specify box names which will be used for ssh connection separated by space and enclosed in parenthesis. I.e. (hostname1 hostname2 hostname3)
			] 
}
