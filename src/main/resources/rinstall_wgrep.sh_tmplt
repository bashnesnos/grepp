#!/bin/bash
USER='#USER#'
GREP_HOME='#NIX_DIR#'
echo $USER
echo $GREP_HOME
echo $1
BOXES=#BOXES#

for box in ${BOXES[*]}
do
	if [ "$1" != "-u" ] && [ "$1" != "-rm" ]; then
		ssh $box 'cd ~;mkdir wgrep;cd wgrep;mkdir results;mkdir remote;echo "done"'
	fi

	if [ "$1" == "-rm" ]; then
		ssh $box 'cd ~/wgrep;rm -r *;echo "cleaned"'
	fi

	scp -p -r ./ $USER@$box:$GREP_HOME
done