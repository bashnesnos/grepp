<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="configFactory" class="org.smltools.grepp.config.ConfigHolderFactory">
		<property name="configFile" value="classpath:config.xml" />
		<property name="configXSD" value="classpath:config.xsd" />
	</bean>

	<bean id="configInstance" class="org.smltools.grepp.config.ConfigHolder"
		factory-bean="configFactory" factory-method="getInstance">
	</bean>

	<bean id="paramsHolderFactory" class="org.smltools.grepp.config.PredictingParamsHolderFactory">
		<constructor-arg ref="configInstance" />
	</bean>

	<bean id="greppFacade" class="org.smltools.grepp.GreppFacade">
		<property name="paramsHolderFactory">
			<ref bean="paramsHolderFactory" />
		</property>
	</bean>

</beans>
