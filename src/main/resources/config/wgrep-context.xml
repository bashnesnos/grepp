<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="configFactory" class="org.smlt.tools.wgrep.config.WgrepConfigFactory">
		 <property name="configFile" value="classpath:config.xml"/>
  		<property name="configXSD" value="classpath:config.xsd"/>
	</bean>
  
	<bean id="facade" class="org.smlt.tools.wgrep.WgrepFacade">
  		<constructor-arg index="0"><ref bean="configInstance"/></constructor-arg>
	</bean>

	<bean id="configInstance" class="org.smlt.tools.wgrep.config.WgrepConfig" factory-bean="configFactory" factory-method="getInstance">
	</bean> 


</beans>
