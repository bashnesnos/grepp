<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="configFactory" class="org.smlt.tools.wgrep.config.ConfigHolderFactory">
		<property name="configFile" value="classpath:config.xml" />
		<property name="configXSD" value="classpath:config.xsd" />
	</bean>

	<bean id="configInstance" class="org.smlt.tools.wgrep.config.ConfigHolder"
		factory-bean="configFactory" factory-method="getInstance">
	</bean>

	<bean id="paramsHolderFactory" class="org.smlt.tools.wgrep.config.PredictingParamsHolderFactory">
		<constructor-arg ref="configInstance" />
	</bean>

	<bean id="wgrepFacade" class="org.smlt.tools.wgrep.WgrepFacade">
		<property name="paramsHolderFactory">
			<ref bean="paramsHolderFactory" />
		</property>
	</bean>

</beans>
